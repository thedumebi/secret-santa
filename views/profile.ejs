<%- include("partials/header") -%>

<section class="container">
<div>
  <h1 class="section-title">Hello <%= user.email %></h1>
</div>

<div class="user-page">
  <h1 class="user-title">Edit Info</h1>

  <% if (messages.error) { %>
    <div class="error"><%= messages.error %></div>
  <% } %>

  <form action="/user/<%= user._id %>" method="POST" class="user-form">    
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="password"
      />
    
      <label for="first_name">First Name</label>
      <input
        type="text"
        class="form-control"
        name="first_name"
        placeholder="John"
        value="<%= user.first_name %>" 
      />
    
      <label for="last_name">Last Name</label>
      <input
        type="text"
        class="form-control"
        name="last_name"
        placeholder="Doe"
        value="<%= user.last_name %>"
      />
   
      <label for="last_name">Address</label>
      <input
        type="text"
        class="form-control"
        name="address"
        placeholder="234 Blvd"
        value="<%= user.address %>"
      />
    
      <label for="phone_number">Phone Number</label>
      <input
        type="text"
        class="form-control"
        name="phone_number"
        placeholder="Enter your phone number"
        value="<%= user.phone_number %>" 
      />
 
      <label for="item">Preferred Gift Item</label>
      <input
        type="text"
        class="form-control"
        name="item"
        placeholder="Enter a gift item you want"
        value=<% if (user.gift_choice) { %>
          <%= user.gift_choice.item %>
        <% } %> 
      />
    
      <label for="amount">Cash</label>
      <input
        type="number"
        class="form-control"
        name="amount"
        placeholder="Enter amount if you would like cash"
        value=<% if (user.gift_choice) { %>
        <%= user.gift_choice.amount %> 
        <% } %>
      />

    <button type="submit" class="btn btn-dark">Update</button>
  </form>

  <div class="user__logout">
    <form action="/logout" method="POST">
      <button type="submit" class="btn btn-dark">Logout</button>
    </form>
  </div>
</div>



</section>

<%- include("partials/footer") -%>
